
<% if flash[:error] %>
<div class="errors flash fatal">
   <h3 class="error"><%= flash[:error] %>
   </div>
   <% end %>
   
<div class="form-container">
<h1>What have you done today to prevent our planet?</h1>
    <h2>Please fill the form</h2>

    <form action="/actions" method="POST" >
     
    
    <label for="name">Name:</label>
    <input type="text" name="action[name]" id="name" required><br>

    <label for="title">Title</label>
    <input type="text" name="action[title]" id="title" required><br>

    <label for="description">Description</label>
    <input type="text" name="action[description]" id="description" required><br>

    <label for="fact">Fact</label>
    <input type="text" name="action[fact]" id="fact" required><br>
    
    <label for="image">Image</label>
    <input type="file" name="action[image]" id="image"><br>
  
    
    <input type="submit" value="Submit">

    </form>
    </div>


    
    
   