<p>Thank you for participating to protect our planet, see below your daily actions</p>

  <div class="actions-container">
      <h4>Your Daily Actions</h4>

      <div>
        <ul class="list-group">
        <li class="list-group-item list-group-item-info">Current Users Action</li>
        <%  @current_user_action.each do |action| %>
          <li><a href="/actions/<%= action.id%>"><%= action.title %></a> <a href="/actions/<%= action.id%>/associate" class="btn btn-info"><%= action.add_or_remove(current_user) %></a></li>
        <% end %>
        </ul>
        </div>
        <br>

      <div>
      <ul class="list-group">
      <li class="list-group-item list-group-item-info">Recently Added Actions</li>
      <% @actions_recently_added.each do |action| %>
        <li><a href="/actions/<%= action.id%>"><%= action.title %></a><a href="/actions/<%= action.id%>/associate" class="btn btn-info"><%= action.add_or_remove(current_user) %></a></li>
      <% end %>
      </ul>
      </div>
      <br>

      

        <div>
        <ul class="list-group">
        <li class="list-group-item list-group-item-info">All Actions</li>
        <% @actions.each do |action| %>
          <li><a href="/actions/<%= action.id%>"><%= action.title %></a> <a href="/actions/<%= action.id%>/associate" class="btn btn-info"><%= action.add_or_remove(current_user) %></a></li>
        <% end %>
        </ul>
        </div>
     
            <br><br>
            <h3><a href="/actions/new" class="btn btn-primary">Create new action</a> </h3>      
  </div>

