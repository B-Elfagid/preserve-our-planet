<div class="mb-1 row justify-content-center">
     <h2> Daily Action </h2>
</div>

<div class="mb-1 row">
  <div class="col-md-8">
    <h3>Action Name: <%= @action.name %></h3>
</div>
    
<div class="col-md-8">
      <h3>Action Title: <%= @action.title %></h3>
</div>

<div class="col-md-8">
   <h3>Description: <%= @action.description %></h3>
 </div>

 <div class="col-md-8">
     <h3>Fact: <%= @action.fact %></h3>
 </div>

 <div class="col-md-6">
   
    <h3>Image <%= @action.image %></h3>
 </div>
</div>

<div class="buttons row">
 <div class="mb-1 col-1"> 
   <a href="/actions/<%= @action.id %>/edit" class="btn btn-outline-success">Edit </a>
 </div>
 <div class="mb-1 col-6">
    <form action="/actions/<%= @action.id %>/delete" method="POST" >
      <input id="hidden" type="hidden" name="_method" value="delete">  
      <input type="submit" value="Destroy" role="button" class="btn btn-outline-danger">
    </form>

 </div>
</div>



