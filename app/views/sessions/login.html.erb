
 
<% if flash[:error] %>
<div class="errors flash fatal">
   <h3 class="error"><%= flash[:error] %>
   </div>
   <% end %>

<body>

  <div class="form-container">
    <h4>Login</h4>
       <form method="POST" action="/login">
     
          <div class="form-group">
             <lable for="email">Email</lable>
                <input type="email" name="user[email]" id="email" class="form-control" required>
          </div>

          <div class="form-group">
             <lable for="password">Password</lable>
                <input type="password" name="user[password]" id="password" class="form-control" required>
          </div>
      

           <input type="submit" class="btn btn-primary" value="Login">
       
        
          <br><br>
       
          <h5>You don't have account yet? signup here <a href="/signup">SignUp</a></h5>

          <br><br><br>
         <small>We do not share your personal information you have provided to us without your consent!</small>
    </form>
</div>


<style>

.form-container {
  background-color: whitesmoke;
  text-align: left;
  margin: 0;
  vertical-align: middle;
  height :400px;
  padding: 5px;
  border-radius: 10px;
  box-shadow: 0px 0px 10px #000;
  width: 40%;
  margin-left: auto;
  margin-right: auto;
}

h5 {
  text-align: center;
  display: block;
  font-size: .67em;
  
  font-weight: bold;
}

h4 {
  text-align: center;
  font-weight: bold;
}

</style>

</body>
